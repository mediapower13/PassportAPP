<%- include ('includes/header') %>

<main class="form-signin w-100 m-auto reg-page">
  <% if (locals.errors) { %>
    <div class="error-container">
        <% errors.forEach(function(error){ %>
            <div class="alert alert-danger d-flex align-items-center">
                <i class="error-icon">⚠️</i>
                <span><%= error.msg %></span>
            </div>
        <% }) %>
    </div>
<% } %>

<%- messages() %>
  <form method="post" action="/users/Register" class="reg-page">
    <!-- <% if (locals.errors) { %>
    <% errors.forEach(function(error){ %>
    <div class=""alert alert-danger><%=error.msg %></div>
    <%  }) %>
    <% } %> -->

   
  
    <!-- <img class="mb-4" src="/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"> -->
    <h1 class="h3 mb-3 fw-normal">User Registration</h1>

    <div class="form-floating">
      <input type="text" class="form-control" id="floatingInput" placeholder="name" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" required autofocus>
      <label for="floatingInput">Name</label>
   </div>
   
    <br>

    <div class="form-floating">
      <input type="text" class="form-control" id="floatingInput" placeholder="Email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required autofocus>
      <label for="floatingInput">Email</label>
    </div>
    <br>
    
    <div class="form-floating">
      <input type="text" class="form-control" id="floatingInput" placeholder="Username" name="username" value="<%= typeof username !== 'undefined' ? username : '' %>" required autofocus>
      <label for="floatingInput">Username</label>
    </div>
    <br>
    
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" value="<%= typeof password !== 'undefined' ? password : '' %>" required autofocus>
      <label for="floatingPassword">Password</label>
    </div>
    <br>
    
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" placeholder="Confirm Password" name="password2" value="<%= typeof password2 !== 'undefined' ? password2 : '' %>" required autofocus>
      <label for="floatingPassword">Confirm Password</label>
    </div>
    
    <p>Have Account? <a href="/users/login">Login</a></p>

    <!-- <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault"> -->
        <!-- Remember me -->
      </label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    <!-- <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2024</p> -->
  </form>
</main>

<%- include ('includes/footer') %>